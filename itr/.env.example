# Application
NODE_ENV=development
APP_NAME=ITR Filing Platform
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Server
PORT=3000
API_VERSION=v1

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=itr_platform
DB_USER=itr_user
DB_PASSWORD=itr_password_dev
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database - MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=itr_documents
MONGO_USER=admin
MONGO_PASSWORD=admin_password_dev
MONGO_AUTH_SOURCE=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage - MinIO/S3
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost
